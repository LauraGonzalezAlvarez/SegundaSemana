import java.util.Vector;

/**
 * Esta clase contiene valores de un vector
 *
 * @author Gretty Mosquera <gretymosquera@gmail.com>
 * @version 1.0.0 2022-05-02
 * @since 1.0.0
 */
public class Numbers {

	/*
     * Atributos
     */
    private Vector<Integer> numbers;

    /*
     * Constructor
     */
    public Numbers() {
        this.numbers = new Vector<Integer>(5);
    }

    /**
     * Muestra cada elemento del vector
     *
     * @version 1.0.0 2022-05-01
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public void viewNumbers() {
        int length = this.numbers.size();

        for (int i = 0; i < length; i++) {
            System.out.println(this.numbers.get(i));
        }
    }

    /**
     * Permite añadir números al vector, pero antes valida sí el último elemento coincide con el número a ingresar.
     *
     * @version 1.0.0 2022-05-01
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public void addNumber(Integer number) {
        int length = this.numbers.size();

        if (length > 0 && number == this.numbers.get(this.numbers.size() - 1)) {
            this.viewNumbers();
            System.exit(0);
        } else {
            this.numbers.add(number);
        }
    }
}
