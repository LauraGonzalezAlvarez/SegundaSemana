
/**
 * Esta clase contiene la información de coche
 *
 * @author Gretty Mosquera <gretymosquera@gmail.com>
 * @version 1.0.0 2022-04-24
 * @since 1.0.0
 */
public class Car extends Vehicle {
    /**
     * Atributos
     */
    private boolean isElectricCar;

    /**
     * Métodos setters
     */
    public void setElectricCar(boolean isElectricCar) {
        this.isElectricCar = isElectricCar;
    }

    /**
     * Métodos getters
     */
    public boolean getIsElectricCar() {
        return this.isElectricCar = isElectricCar;
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String startUp() {
        return "";
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String stop() {
        return "";
    }

    @Override
    public String toString(){
        return "Tipo de vehículo: Coche \n" +
                super.toString() + " \n Eléctrico: " + (getIsElectricCar() == true
                ? "Sí"
                : "No"
        );
    }
}
