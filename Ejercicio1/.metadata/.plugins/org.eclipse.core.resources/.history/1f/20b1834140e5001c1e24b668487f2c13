import java.util.Calendar;
import java.util.UUID;


	
/**
 * Clase Vehiculo con sus atributos
 *
 * @author Laura Daniela Gonzalez Alvarez <lhaogonzaleza@gmail.com>
 * @version 1.0.0 2022-06-05
 * @since 1.0.0
 */
public class Vehicle {
   
    /**
     * Permite identificar el vehículo con un codigo único
     */
    UUID Id;
    /**
     * Nombre del vehículo
     */
    String Name;
    /**
     * Fecha de matricula del vehículo ------------------
     */
    Calendar registration;      
    /**
     * Número de pasajeros que soporta el vehículo -------------
     */
    int numPassengers;
    /**
     * Número de puertas del vehículo
     */
    int numberDoors;
    /**
     * Número de asientos del vehículo
     */
    int numberSeats;
    /**    
     * Presencia o ausencia de tripulación
     */
    int occupants;
    /**
     * Número de ruedas ---------------
     */
    int numberWheels;
    /**
     * Tipo de vehículo (aéreo, marítimo y terrestre), medio por donde se desplaza -----------
     */
    String vehicleType;

    /**
     * Constructores
     */
    public Vehicle() {
        this.Id = UUID.randomUUID();
    }

    /**
     * Métodos setters
     */
    public void setVehicleName(String Name) {
        this.Name = Name;
    }

    public void setRegistrationDate(Calendar registration) {
        this.registration = registration;
    }

   
    public void setNumberPassengers(int numPassengers) {
        this.numPassengers = numPassengers;
    }

    public void setNumberDoors(int numberDoors) {
        this.numberDoors = numberDoors;
    }

    public void setNumberSeats(int numberSeats) {
        this.numberSeats = numberSeats;
    }

    public void setOccupants(int occupants) {
        this.occupants = occupants;
    }

    public void setNumberWheels(int numberWheels) {
        this.numberWheels = numberWheels;
    }

    public void setVehicleType(String vehicleType) {
        this.vehicleType = vehicleType;
    }

    /**
     * Métodos getters
     */
    public UUID getID() {
        return Id;
    }

    public String getVehicleName() {
        return Name;
    }

    public Calendar getRegistrationDate() {
        return registration;
    }

   
    public int getNumberPassengers() {
        return numPassengers;
    }

    public int getNumberDoors() {
        return numberDoors;
    }

    public int getNumberSeats() {
        return numberSeats;
    }

    public int getOccupants() {
        return occupants;
    }

    public int getNumberWheels() {
        return numberWheels;
    }

    public String getVehicleType() {
        return vehicleType;
    }

    /**
     * Este método se utiliza para convertir a String cualquier objeto Java.
     * Muestra la información que contiene un vehículo
     *
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     */
    public String toString() {
        return "El nombre del vehículo es: " + getVehicleName() +
                "\nCantidad de puertas: " + getNumberDoors() +
                "\nCantidad de asientos: " + getNumberSeats() +
                "\nCantidad de ruedas: " + getNumberWheels() +
                "\nTipo de vehículo: " + getVehicleType();
    }
}	