
public class OneMain {

	public static void main(String[] args) {
		 System.out.println("┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓\n" +
	                "\tEjecutándose desde el archivo Main1.java\n" +
	                "┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛\n" +
	                "Los proyectos en java soportan múltiples archivos main, aunque solo" +
	                "uno puede ser ejecutado a la vez como punto de entrada a nuestra" +
	                "aplicación." +
	                "Eso es poco usual pero puedes elegir que archivo main ejecutar de dos maneras: \n" +
	                "1. Menú contextual \"Run\" -> \"Run...\" \n" +
	                "2. O presionas click derecho, \"Run\" sobre el archivo que deseas ejecutar.\n"
	        );

	        /**
	         * Atributos
	         */

	        /**
	         * Valor de número 1
	         */
	        int number1 = 10;
	        /**
	         * Valor de número 2
	         */
	        int number2 = 25;
	        /**
	         * Resultado de la suma entre número 1 y número 2
	         */
	        int sum;

	        sum = number1 + number2;
	        System.out.println("---Suma---\n" + number1 + " + " + number2 + " = " + sum);
	}

}
