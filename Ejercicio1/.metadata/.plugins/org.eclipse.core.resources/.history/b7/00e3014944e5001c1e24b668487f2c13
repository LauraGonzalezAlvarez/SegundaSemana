
/**
 * Esta clase contiene la información de bicicleta
 *
 * @author Gretty Mosquera <gretymosquera@gmail.com>
 * @version 1.0.0 2022-04-24
 * @since 1.0.0
 */
public class Bicycle extends Vehicle {
    /**
     * Atributos
     */
    private boolean trainingWheels;

    /**
     * Métodos setters
     */
    public void setTrainingWheels(boolean trainingWheels) {
        this.trainingWheels = trainingWheels;
    }

    /**
     * Métodos getters
     */
    public boolean getTrainingWheels() {
        return this.trainingWheels;
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String startUp() {
        return "";
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String stop() {
        return "";
    }

    @Override
    public String toString() {
        return "Tipo de vehículo: Bicicleta \n" +
                super.toString() + " \n Ruedas entrenamiento: " + (getTrainingWheels() == true
                ? "Sí"
                : "No"
        );
    }
}