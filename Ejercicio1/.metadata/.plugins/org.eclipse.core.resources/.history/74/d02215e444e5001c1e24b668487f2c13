
/**
 * Esta clase contiene la información de lancha
 *
 * @author Gretty Mosquera <gretymosquera@gmail.com>
 * @version 1.0.0 2022-04-24
 * @since 1.0.0
 */
public class Boat extends Vehicle {
    /**
     * Atributos
     */
    private boolean hasEngine;

    /**
     * Métodos setters
     */
    public void setHasEngine(boolean hasEngine) {
        this.hasEngine = hasEngine;
    }

    /**
     * Métodos getters
     */
    public boolean getHasEngine() {
        return this.hasEngine;
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String startUp() {
        return "";
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String stop() {
        return "";
    }

    @Override
    public String toString() {
        return "Tipo de vehículo: Lancha \n" +
                super.toString() + " \n Motor: " + (getHasEngine() == true
                ? "Sí"
                : "No"
        );
    }
}