
/**
 * Esta clase contiene la información de moto
 *
 * @author Gretty Mosquera <gretymosquera@gmail.com>
 * @version 1.0.0 2022-04-24
 * @since 1.0.0
 */
public class Motorcycle extends Vehicle {
    /**
     * Atributos
     */
    private boolean isSported;

    /**
     * Métodos setters
     */
    public void setIsSported(boolean isSported) {
        this.isSported = isSported;
    }

    /**
     * Métodos getters
     */
    public boolean getIsSported() {
        return this.isSported;
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String startUp() {
        return "";
    }

    /**
     * @return String
     * @author Gretty Mosquera <gretymosquera@gmail.com>
     * @since 1.0.0
     */
    public String stop() {
        return "";
    }

    @Override
    public String toString(){
        return "Tipo de vehículo: Moto \n" +
                super.toString() + " \n Deportiva: " + (getIsSported() == true
                ? "Sí"
                : "No"
        );
    }
}
