import java.util.Scanner;

public class FerryMain {

	public static void main(String[] args) {
		 int ferryCapacity = 10;
	        Vehicle[] ferry = new Vehicle[ferryCapacity];

	        for (int i = 0; i < ferryCapacity; i++) {
	            Vehicle vehicle1 = new Vehicle();
	            System.out.println("Registrando vehículo #" + (i + 1));
	            vehicle1.setVehicle(readString("Digite el nombre del vehículo: "));
	            vehicle1.setNumrDoors(readInt("Digite la cantidad de puertas: "));
	            vehicle1.setNumSeats(readInt("Digite la cantidad de asientos: "));
	            vehicle1.setNumWheels(readInt("Digite la cantidad de ruedas: "));
	            vehicle1.setVehicleGuy(readString("Digite el tipo de vehículo: "));
	            ferry[i] = vehicle1;
	        }

	        for (int i = 0; i < ferryCapacity; i++) {
	            System.out.println("Mostrando información del vehículo #" + (i + 1));
	            System.out.println(ferry[i].toString());
	            
	        }
	    }

	    /**
	     * Este método permite crear una instancia tipo Scanner y recibe un valor tipo String
	     *
	     * @param message
	     * @return String
	     */
	    static String readString(String message) {
	        Scanner entry = new Scanner(System.in);
	        System.out.println(message);
	        return entry.nextLine();
	    }

	    /**
	     * Este método permite crear una instancia tipo Scanner y recibe un valor tipo Integer
	     *
	     * @param message
	     * @return Integer
	     */
	    static Integer readInt(String message) {
	        Scanner entry = new Scanner(System.in);
	        System.out.println(message);
	        return entry.nextInt();

	}

}
